<AuthorizeView Roles="Admin, Manager, User">
    <Authorized>
        <MudNavGroup Title="Usuários"
                     Icon="@Icons.Material.Filled.PeopleOutline"
                     IconColor="Color.Success"
                     Expanded="@(ExpandedGroup == "Users")"
                     ExpandedChanged="@(() => ExpandedChanged.InvokeAsync("Users"))">
            
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/usuarios"))" 
                        Class="mud-nav-link responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.People"
                        IconColor="Color.Success">
                Lista
            </MudNavLink>
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/usuarios/editar"))" 
                        Class="mud-nav-link responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.Person" 
                        IconColor="Color.Success">
                Meu Cadastro
            </MudNavLink>
            
        </MudNavGroup>
    </Authorized>
</AuthorizeView>

@code {
    [Parameter] public string? ExpandedGroup { get; set; }
    [Parameter] public string? ExpandedSubGroup { get; set; }

    [Parameter] public EventCallback<string> ExpandedChanged { get; set; }
}