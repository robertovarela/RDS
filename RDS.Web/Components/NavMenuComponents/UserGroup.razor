<AuthorizeView Roles="Admin, Manager, User">
    <Authorized>
        <MudNavGroup Title="Usuários" Class="px-4" Icon="@Icons.Material.Filled.PeopleOutline" IconColor="Color.Success"
                     Expanded="@(ExpandedGroup == "SubUsers")" ExpandedChanged="@(() => ExpandedChanged.InvokeAsync("SubUsers"))">
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/usuarios"))" Class="responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.People" IconColor="Color.Success">
                Lista
            </MudNavLink>
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/usuarios/editar"))" Class="responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.Person" IconColor="Color.Success">
                Meu Cadastro
            </MudNavLink>
        </MudNavGroup>
    </Authorized>
</AuthorizeView>

@code {
    [Parameter] public string? ExpandedGroup { get; set; }

    [Parameter] public EventCallback<string> ExpandedChanged { get; set; }
}