<AuthorizeView Roles="Admin, Manager, User">
    <Authorized>
        <MudNavGroup Title="Gerenciamento" 
                     Icon="@Icons.Material.Filled.Class"
                     IconColor="Color.Warning"
                     Expanded="@(ExpandedGroup == "Manager")" 
                     ExpandedChanged="@(() => ExpandedChanged.InvokeAsync("Manager"))">
            
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/empresas"))" 
                        Class="mud-nav-link responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.Build" 
                        IconColor="Color.Info">
                Empresas
            </MudNavLink>
            
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/categorias"))" 
                        Class="mud-nav-link responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.Category" 
                        IconColor="Color.Info">
                Categorias
            </MudNavLink>
            
            <MudNavLink OnClick="@(() => NavigationService.NavigateTo("/lancamentos/historico"))" 
                        Class="mud-nav-link responsive-text drawer-subtitle"
                        Icon="@Icons.Material.Filled.History" 
                        IconColor="Color.Warning">
                Transações
            </MudNavLink>
        
            </MudNavGroup>
    </Authorized>
</AuthorizeView>

@code {
    [Parameter] public string? ExpandedGroup { get; set; }
    [Parameter] public string? ExpandedSubGroup { get; set; }


    [Parameter] public EventCallback<string> ExpandedChanged { get; set; }
}