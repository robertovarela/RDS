@using RDS.Core.Services

<MudPaper Class="pa-2">
    <div class="d-flex justify-content-between align-items-center ma-4">
        <MudPaper Class="pa-4 bg-appbarbackground" Style="margin-right: 8px;">
            <MudText Typo="Typo.h6">Usuário Logado: @UserStateService.GetLoggedUserId()</MudText>
            <MudText Typo="Typo.h6">Usuário Selecionado: @UserStateService.GetSelectedUserId()</MudText>
            <MudText Typo="Typo.h6">Endereço Selecionado: @UserStateService.GetSelectedAddressId()</MudText>
            <MudText Typo="Typo.h6">Categoria Selecionada: @UserStateService.GetSelectedCategoryId()</MudText>
        </MudPaper>
    </div>
</MudPaper>


@code {
    [Inject]
    UserStateService UserStateService { get; set; } = null!;

    protected override void OnInitialized() => StateHasChanged();
}