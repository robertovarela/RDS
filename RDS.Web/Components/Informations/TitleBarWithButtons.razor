<MudPaper Class="pr-8 pl-8 pt-4 pb-4 mt-4 bg-drawer">
    <div class="d-flex">
        <MudButton ButtonType="ButtonType.Button"
                   Variant="Variant.Filled"
                   Color="Color.Secondary"
                   OnClick="@(() => NavigationService.NavigateTo(LeftButtonUrl))">
            @LeftButtonTitle
        </MudButton>
        <MudSpacer />
        <MudText Typo="Typo.h4">@Title</MudText>
        <MudSpacer />
        <MudButton ButtonType="ButtonType.Button"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="@(() => NavigationService.NavigateTo(RightButtonUrl))">
            @RightButtonTitle
        </MudButton>
    </div>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = "";

    [Parameter] public string LeftButtonUrl { get; set; } = "";

    [Parameter] public string LeftButtonTitle { get; set; } = "Voltar";

    [Parameter] public string RightButtonUrl { get; set; } = "";

    [Parameter] public string RightButtonTitle { get; set; } = "Adicionar";
}