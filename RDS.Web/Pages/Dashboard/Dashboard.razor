@page "/dashboard"
@inherits DashboardPage

<MudGrid Justify="Justify.Center">
    <MudItem lg="8" md="12" sm="12" xs="12" Class="card-item">
        <MudCard Class="pa-8 card-card">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Resumo Financeiro</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@(ShowValues ? Icons.Material.TwoTone.VisibilityOff : Icons.Material.TwoTone.Visibility)"
                                   OnClick="ToggleShowValues" />
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <p>
                    <strong>SALDO</strong>
                </p>
                @if (Summary is null)
                {
                    <div class="d-flex justify-center align-center" style="height: 350px">
                        <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
                    </div>
                }
                else
                {
                    @if (Summary.Total > 0)
                    {
                        <MudText Color="Color.Success" Typo="Typo.h3">
                            @(ShowValues ? Summary.Total.ToString("C") : "R$ ********")
                        </MudText>
                    }
                    else
                    {
                        <MudText Color="Color.Error" Typo="Typo.h3">
                            @(ShowValues ? Summary.Total.ToString("C") : "R$ ********")
                        </MudText>
                    }

                    <br />
                    <p>
                        <strong>Entradas</strong>
                    </p>
                    <MudText Color="Color.Success">
                        @(ShowValues ? Summary.Incomes.ToString("C") : "R$ ********")
                    </MudText>

                    <br />
                    <p>
                        <strong>Saídas</strong>
                    </p>
                    <MudText Color="Color.Error">
                        @(ShowValues ? Summary.Expenses.ToString("C") : "R$ ********")
                    </MudText>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<style>
    .card-item {
        max-height: 900px;
        min-height: 350px;
        overflow: hidden;
    }

    .card-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        max-height: 900px;
        min-height: 350px;
        overflow: hidden;
    }
</style>