@page "/home"
@inherits HomePage

<AuthorizeView>
    <Authorized>
        @if(IsOwner || IsAdmin)
        {
            <MudPaper Class="pa-8 mt-4">
                @foreach (var company in Companies)
                {
                    <MudCard Outlined="true" Class="pa-4 ma-4">
                        <MudCardContent>
                            <MudText>@company.CompanyName</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Text"
                                       Color="Color.Primary"
                                       OnClick="() => SelectCompany(company.CompanyId)">
                                Acessar
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                    <MudSpacer/>
                }
            </MudPaper>
        }
    </Authorized>
    <NotAuthorized>
        <MudPaper>
            <MudText>No momento não dispomos de conteúdo livre...</MudText>
        </MudPaper>
        <MudSpacer/>
        <MudPaper>
            <MudText>Efetue Login para acessar o conteúdo privado</MudText>
        </MudPaper>
    </NotAuthorized>
</AuthorizeView>
<style>
    .card-item {
        max-height: 900px;
        min-height: 350px;
        overflow: hidden;
    }

    .card-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        max-height: 900px;
        min-height: 350px;
        overflow: hidden;
    }
</style>