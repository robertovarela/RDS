@page "/home"
@inherits HomePage

<AuthorizeView>
    <Authorized>
        <TitleBar Title="RDS - Desenvolvimento de Softwares"/>
        <MudPaper Class="pa-2">
            <div class="d-flex justify-content-between align-items-center ma-4">
                <MudPaper Class="pa-4 bg-appbarbackground" Style="margin-right: 8px;">
                    <MudText Typo="Typo.h6">Usuário Logado: @UserState.LoggedUserId</MudText>
                    <MudText Typo="Typo.h6">Usuário Selecionado: @UserState.SelectedUserId</MudText>
                    <MudText Typo="Typo.h6">Endereço Selecionado: @UserState.SelectedUserAddressId</MudText>
                    <MudText Typo="Typo.h6">Categoria Selecionada: @UserState.SelectedCategoryId</MudText>
                </MudPaper>
            </div>
        </MudPaper>
    </Authorized>
    <NotAuthorized>
        <PageRedirect pageRedirect="/login" message="Redirecionando para o login..."/>
    </NotAuthorized>
</AuthorizeView>
<style>
    .card-item {
        max-height: 900px;
        min-height: 350px;
        overflow: hidden;
    }

    .card-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        max-height: 900px;
        min-height: 350px;
        overflow: hidden;
    }
</style>